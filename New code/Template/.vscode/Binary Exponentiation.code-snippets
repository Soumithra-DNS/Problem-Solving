{
  "Binary Exponentiation": {
    "prefix": "binexp",
    "description": "Binary Exponentiation (Modular Power)",
    "body": [
      "template <typename T>",
      "T binExp(T a, T b, T m) {",
      "    T res = 1;",
      "    a %= m;",
      "    while (b > 0) {",
      "        if (b & 1)",
      "            res = (res * a) % m;",
      "        a = (a * a) % m;",
      "        b >>= 1;",
      "    }",
      "    return res;",
      "}",
      ""
    ]
  }
}
